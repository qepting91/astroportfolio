---

<Layout pageTitle={pageTitle}>
  <div class="resume-wrapper">
    <div class="resume-header">
      <h1>{resume.basics.name}</h1>
      
      <div class="profiles">
        {resume.basics.profiles.map(profile => (
          <a href={profile.url} target="_blank" class="profile-link">{profile.network}</a>
        ))}
      </div>
    </div>

    <p class="summary">{resume.basics.summary}</p>

    <h2>Technical Proficiencies</h2>
    <div class="skills-grid">
      {resume.skills.map((skillGroup) => (
        <div class="skill-category">
          <h3>{skillGroup.name}</h3>
          <ul>
            {skillGroup.keywords.map((keyword) => <li>{keyword}</li>)}
          </ul>
        </div>
      ))}
    </div>

    <h2>Professional Experience</h2>
    <div class="experience-list">
      {resume.work.map((job) => (
        <div class="job-entry">
          <div class="job-header">
              <h3>{job.position} <span class="at">at</span> {job.name}</h3>
              <span class="date-badge">{job.startDate} - {job.endDate}</span>
          </div>
          <ul class="job-highlights">
            {job.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <h2>Projects</h2>
    <div class="projects-list">
      {resume.projects.map((project) => (
        <div class="project-entry">
          <div class="project-header">
              <h3>{project.name}</h3>
              <div class="tech-tags">
                  {project.keywords.map(tag => <span class="tag">{tag}</span>)}
              </div>
          </div>
          <p>{project.description}</p>
        </div>
      ))}
    </div>

    <h2>Education</h2>
    <ul class="education-list">
      {resume.education.map((edu) => (
        <li>
          <div class="edu-header">
              <h3>{edu.institution}</h3>
              <span class="date">{edu.startDate ? `${edu.startDate} - ` : ''}{edu.endDate}</span>
          </div>
          <p class="degree">{edu.studyType} in {edu.area}</p>
        </li>
      ))}
    </ul>

    <h2>Certifications</h2>
    <ul class="cert-list">
      {resume.certifications.map((cert) => (
        <li>
          <strong>{cert.name}</strong> | {cert.issuer} 
          {cert.status && <span class="cert-status">({cert.status})</span>}
          {cert.date && <span class="cert-date">({cert.date})</span>}
        </li>
      ))}
    </ul>
  </div>
</Layout>

<style>
  /* --- Global Override for Width --- */
  :global(body) {
      width: 80% !important; /* Force 80% width on this page */
      max-width: 1600px;
  }

  /* --- Fonts & Base --- */
  h1, h2, h3, .profile-link, .tag, .date-badge {
    font-family: "Georgia", "Times New Roman", serif !important;
  }
  
  p, li, .summary, .degree {
      font-family: "Calibri", "Helvetica", "Arial", sans-serif;
      font-size: 1.15rem;
      line-height: 1.6;
  }

  /* --- Dark Mode (Default) Styles --- */
  h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: #fdebf3;
  }

  h2 {
    font-size: 2rem;
    border-bottom: 2px solid #78c2ad;
    padding-bottom: 5px;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: #fdebf3;
    text-decoration: none;
  }

  h3 {
    font-size: 1.4rem;
    color: #78c2ad;
    font-weight: bold;
    margin-bottom: 0.3rem;
  }

  .skill-category h3 {
      font-size: 1.2rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: #78c2ad;
  }

  a {
      color: #78c2ad;
      text-decoration: none;
  }
  
  a:hover {
      text-decoration: underline;
  }

  .at {
    color: #b4b2b3;
    font-weight: normal;
  }

  /* --- Light Mode Overrides --- */
  :global(.light) h1 {
      color: #1e1e2e;
  }
  
  :global(.light) h2 {
      color: #2a5078;
      border-bottom-color: #2a5078;
  }

  :global(.light) h3 {
      color: #2a5078;
  }

  :global(.light) .skill-category h3 {
      color: #1e1e2e;
      font-weight: 800;
  }

  :global(.light) a {
      color: #2a5078;
  }
  
  :global(.light) .at {
      color: #555;
  }

  :global(.light) p, 
  :global(.light) li {
      color: #1e1e2e;
  }

  /* --- Layout & Components --- */
  .resume-wrapper {
      padding-bottom: 4rem;
      width: 100%; /* Fill the wider body */
      margin: 0 auto;
  }

  .resume-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .profiles {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  /* BUTTONS */
  .profile-link {
    border: 2px solid #78c2ad;
    padding: 0.5rem 1.5rem;
    border-radius: 5px;
    transition: all 0.2s;
    font-size: 1rem;
    font-weight: bold;
    color: #fdebf3;
    background-color: transparent;
  }
  
  .profile-link:hover {
    background-color: #78c2ad;
    color: #1e1e2e;
    text-decoration: none;
  }
  
  /* Light Mode Buttons */
  :global(.light) .profile-link {
      color: #1e1e2e;
      border-color: #1e1e2e;
      background-color: rgba(255,255,255,0.4);
  }

  :global(.light) .profile-link:hover {
      background-color: #1e1e2e;
      color: #fff;
  }

  .summary {
    font-style: italic;
    background: rgba(120, 194, 173, 0.1);
    padding: 2rem;
    border-radius: 8px;
    border-left: 5px solid #78c2ad;
    margin-bottom: 3rem;
  }
  
  :global(.light) .summary {
      background: rgba(0, 0, 0, 0.05);
      border-left-color: #2a5078;
  }

  /* Skills Grid */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
  }

  .skill-category li {
    background-color: rgba(255, 255, 255, 0.1);
    display: inline-block;
    padding: 5px 12px;
    border-radius: 6px;
    font-size: 1rem;
    margin: 4px;
  }
  
  :global(.light) .skill-category li {
      background-color: #dbe4f0;
      color: #1e1e2e;
      border: 1px solid #c0c0c0;
  }

  /* Experience & Projects */
  .job-entry, .project-entry {
    margin-bottom: 2.5rem;
  }

  .job-header, .project-header, .edu-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    margin-bottom: 0.8rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding-bottom: 8px;
  }
  
  :global(.light) .job-header, 
  :global(.light) .project-header, 
  :global(.light) .edu-header {
      border-bottom-color: rgba(0,0,0,0.15);
  }

  .date-badge {
    font-size: 1rem;
    opacity: 0.9;
    font-weight: bold;
  }

  .tech-tags {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
  }
  
  .tag {
      font-size: 0.85rem;
      border: 1px solid #78c2ad;
      padding: 2px 10px;
      border-radius: 12px;
      color: #78c2ad;
  }
  
  :global(.light) .tag {
      border-color: #333;
      color: #333;
      background-color: #fff;
  }

  /* Education Lists */
  .education-list, .cert-list {
      list-style: none;
      padding: 0;
  }
  
  .education-list li {
      margin-bottom: 2rem;
  }
  
  .job-highlights {
      padding-left: 1.5rem;
  }
  
  .cert-list li {
      margin-bottom: 0.8rem;
  }

  /* Mobile Adjustments */
  @media (max-width: 600px) {
    .job-header, .edu-header, .project-header {
      flex-direction: column;
      gap: 0.2rem;
    }
    
    h1 { font-size: 2.2rem; }
    h2 { font-size: 1.6rem; margin-top: 2rem;}
  }
</style>